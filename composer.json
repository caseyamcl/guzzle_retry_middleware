{
    "name": "caseyamcl/guzzle_retry_middleware",
    "type": "library",
    "description": "Guzzle middleware that handles HTTP Retry-After middleware",
    "keywords": [
        "caseyamcl",
        "guzzle_retry_middleware",
        "guzzle",
        "middleware",
        "retry",
        "back-off",
        "retry-after"
    ],
    "homepage": "https://github.com/caseyamcl/guzzle_retry_middleware",
    "license": "MIT",
    "authors": [
        {
            "name": "Casey McLaughlin",
            "email": "caseyamcl@gmail.com",
            "homepage": "https://caseymclaughlin.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "nesbot/carbon": "~1.22",
        "phpunit/phpunit": "^4.8.35 || ^5.7 || ^6.4 || ^7.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "GuzzleRetry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GuzzleRetry\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
